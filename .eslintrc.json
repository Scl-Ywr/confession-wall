{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-require-imports": [
      "error",
      {
        "allowRequireInImportAssertions": true
      }
    ]
  },
  "overrides": [
    {
      "files": ["scripts/**"],
      "rules": {
        "@typescript-eslint/no-require-imports": "off"
      }
    }
  ]
}